<h2 class="mb2 text-bold">Hello, Elizabeth</h2>
<p class="mb5">Welcome to your British Gas activity feed</p>

{{#each model as |activity|}}
  <p class="mb1">{{format-date activity.timestamp}}</p>
  <div class="alert mt0 mb6 pa3">
    
    <div style="display:flex; align-items: center;">
      <span class="bgcss-icon-{{icon-type activity.category}} text-muted pull-left" style="font-size:70px;"></span>
      <h4 class="mb1 ml1 mr8">{{activity.title}}</h4>
    </div>

    <p class="mt2 mb1">{{{activity.description}}}</p>
    <div class="clearfix">
      {{{buttons category=activity.category alertType=activity.alert-type}}}
    </div>

  </div>
{{/each}}

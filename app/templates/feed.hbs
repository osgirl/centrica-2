<h2>Hello, Elizabeth</h2>
<p>Welcome to your British Gas activity feed</p>

{{#each model as |activity|}}
  <p class="text-right mb0">{{format-date activity.timestamp}}</p>
  <div class="alert mt0">
    
    <div style="display:flex; align-items: center;">
      <span class="bgcss-icon-{{icon-type activity.category}} pull-left" style="font-size:70px;"></span>
      <h4 class="mb1">{{activity.title}}</h4>
    </div>

    <p>{{{activity.description}}}</p>
    {{{buttons category=activity.category alertType=activity.alert-type}}}

  </div>
{{/each}}
